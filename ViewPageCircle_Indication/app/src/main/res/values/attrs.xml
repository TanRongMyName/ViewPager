<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" format="integer" />
        <attr name="indicator_color" format="color" />
        <attr name="line_color" format="color" />
        <attr name="text_color" format="color|reference" />
        <attr name="text_size" format="integer|reference" />
        <attr name="selected_text_color" format="color|reference" />
        <attr name="selected_text_size" format="integer|reference" />
    </declare-styleable>
</resources>
